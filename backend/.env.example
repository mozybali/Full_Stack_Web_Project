# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# ====================================
# Server Configuration
# ====================================
PORT=3000
NODE_ENV=development

# ====================================
# JWT Configuration
# ====================================
# !!! IMPORTANT: Change this in production !!!
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=dev-secret-key-change-this-in-production-12345

# JWT Token expiration time (in seconds)
# Default: 86400 (24 hours)
JWT_EXPIRATION=86400

# ====================================
# Database Configuration
# ====================================
# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=gamevault

# Database logging
DB_LOGGING=false
DB_SYNCHRONIZE=true

# ====================================
# Email Configuration (Optional)
# ====================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@gamevault.com

# ====================================
# Frontend Configuration
# ====================================
FRONTEND_URL=http://localhost:5173

# ====================================
# API Configuration
# ====================================
API_VERSION=v1
API_PREFIX=api

# ====================================
# Logging
# ====================================
LOG_LEVEL=debug

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# File Upload
# ====================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ====================================
# AWS Configuration (Optional)
# ====================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=gamevault-uploads
